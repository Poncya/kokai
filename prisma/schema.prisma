generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  date      String   // "YYYY-MM-DD" の文字列で保存
  body      String
  createdAt DateTime @default(now())
}


